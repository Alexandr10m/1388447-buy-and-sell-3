extends layout.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        p.search-results__label
          | Найдено
          span.js-results 2 публикации
        ul.search-results__list
          each result in results
            li.search-results__item
              .ticket-card.ticket-card--color05
                .ticket-card__img
                  img(src=`/img/${result.picture}` srcset='/img/item05@2x.jpg 2x' alt=result.title)
                .ticket-card__info
                  span.ticket-card__label #{result.type === `OFFER` ? `Куплю` : `Продам`}
                  .ticket-card__categories
                    a(href='#') #{result.category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{result.title}
                    p.ticket-card__price
                      span.js-sum #{result.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{result.description}
